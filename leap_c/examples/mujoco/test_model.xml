<mujoco model="simple_pendulum">
  <compiler angle="radian" autolimits="true"/>
  
  <option timestep="0.01" integrator="Euler"/>
  
  <default>
    <joint damping="0.1"/>
    <geom rgba="0.8 0.6 0.4 1"/>
  </default>
  
  <worldbody>
    <light pos="0 0 3"/>
    <geom type="plane" size="1 1 0.1" rgba="0.2 0.2 0.2 1"/>
    
    <body name="pole" pos="0 0 1">
      <joint name="hinge" type="hinge" axis="0 1 0"/>
      <geom name="pole" type="capsule" size="0.05" fromto="0 0 0 0 0 0.6"/>
      <geom name="mass" type="sphere" size="0.1" pos="0 0 0.6"/>
    </body>
  </worldbody>
  
  <actuator>
    <motor name="torque" joint="hinge" gear="1" ctrllimited="true" ctrlrange="-10 10"/>
  </actuator>
</mujoco>
